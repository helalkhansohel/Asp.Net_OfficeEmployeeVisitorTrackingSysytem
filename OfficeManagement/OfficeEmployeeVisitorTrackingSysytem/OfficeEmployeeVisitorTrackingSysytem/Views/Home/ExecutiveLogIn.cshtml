
@{
    ViewBag.Title = "ExecutiveLogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Executive LogIn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<table>
    <tr><td>Cpmpany :</td><td>@Html.DropDownList("CompanyId", null, htmlAttributes: new { @class = "form-control" })</td></tr>
    <tr><td>Email Id :</td><td><input type="email" name="email" id="email"></td></tr>
    <tr><td>Password :</td><td><input type="password" name="pass" id="pass"></td></tr>
    <tr><td></td><td><input type="submit" value="Sign In"></td></tr>
    <tr>
        <td></td>
        <td>
            @if (ViewBag.Message != null)
            {
                <span class="alert alert-danger">@ViewBag.Message</span>
            }
        </td>
    </tr>

</table>
}